<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link 
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
  rel="stylesheet" 
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
  crossorigin="anonymous"
  >
  <link rel="stylesheet" href="https://unpkg.com/terminal.css@0.7.2/dist/terminal.min.css" /><link rel="stylesheet" href="https://unpkg.com/terminal.css@0.7.1/dist/terminal.min.css" /><link rel="stylesheet" href="https://unpkg.com/terminal.css@0.7.1/dist/terminal.min.css" />
  <link rel="stylesheet" href="/stylesheets/welcome.css">
</head>

<body class="terminal">
<!-- nav -->
<div>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">TVA Home</a>
    <div class="dropdown text-end">

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
        <li class="dropdown-item" type="button"><a class="navbar-brand" href="/">TVA Home</a> </li>
        <li class="dropdown-item" type="button"><a class="nav-link" href="profiles">Fellows</a></li>
        <li class="dropdown-item" type="button"><a class="nav-link" href="/profiles/<%= user.profile._id %> ">Profile</a></li>
        <li class="dropdown-item" type="button"><a class="nav-link" href="/auth/logout">Signout</a></li>
      </ul>
    </div>
    <div class="collapse navbar-collapse" id="navbarText">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="profiles">Fellows</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/profiles/<%= user.profile._id %> ">Profile</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/auth/logout">Signout</a>
        </li>
      </ul>
    </div>
  </nav>
</div>
<main class="bg-light">
  <div class="container py-5 px-3">
    <div 
      class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g5 g-sm-3 g-xxl-5 px-sm-5 px-4"
    >
      <% profiles.forEach(profile => { %>
        <div class="col">
          <!-- user clicks on profile to edit profile from this view thats why this is an a link -->
          <a class="text-decoration-none" href="/profiles/<%= profile._id %>">
            <div class="card shadow-sm">
              <% if (profile.avatar) { %>
                <img
                  class="card-img-top"
                  src="<%= profile.avatar %>"
                  alt="<%= profile.name %>'s avatar"
                  width="100%"
                  height="auto"
                />
              <% } else {%>
                <img
                  class="card-img-top"
                  src="/images/icons/user.png"
                  alt="A placeholder avatar"
                  width="100%"
                  height="170"
                />
              <% } %>
              <div class="card-body">
                <p class="card-title fs-5 text-dark mb-0">
                  <%= profile.name %>
                </p>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
