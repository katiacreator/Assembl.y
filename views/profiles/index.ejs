<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link 
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
  rel="stylesheet" 
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
  crossorigin="anonymous"
  >
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <link rel="stylesheet" href="/stylesheets/welcome.css">
</head>

<body>
<!-- nav -->
<header class="p-3 bg-dark text-white">
  <nav class="container">
    <div
      class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start"
    >
      <ul
        class="nav col-12 col-lg-auto me-lg-auto mb-2 mb-md-0 justify-content-center"
      >
        <li>
          <!-- <img 
              src="" 
              alt="site logo" 
              class="me-3"
            > -->
        </li>
        <li class="d-flex align-items-center mb-2 mb-lg-0 fs-3">
          <a href="/" class="text-light text-decoration-none">
            <button>TVA</button>
          </a>
        </li>
        <% if (user) { %>
          <li class="d-flex align-items-center ms-3 mb-2 mb-lg-0">
            <a href="/profiles" class="text-light text-decoration-none">
              View Fellows
            </a>
          </li>
          <li class="d-flex align-items-center ms-3 mb-2 mb-lg-0">
            <a href="/" class="text-light text-decoration-none">
              WELCOME
            </a>
          </li>
          <li class="d-flex align-items-center ms-3 mb-2 mb-lg-0">
            
              <a 
                href="/profiles/<%= user.profile._id %>" 
                class="text-light text-decoration-none"
              >
                My Profile
              </a>
          </li>
          <li class="d-flex align-items-center ms-3 mb-2 mb-lg-0">
            <a 
              href="/auth/logout" 
              class="text-light text-decoration-none"
            >
              Sign Out
            </a>
          </li>
      </ul>
        <% } else { %>
          <a href="/auth/google" class="siwg-link right item">
            <button type="submit" class="siwg">
              <img id="siwg-image" alt="Sign in with Google" />
            </button>
          </a>
        <% } %>
      </div>
    </div>
  </nav>
</header>
<main class="bg-light">
  <div class="container py-5 px-3">
    <div 
      class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g5 g-sm-3 g-xxl-5 px-sm-5 px-4"
    >
      <% profiles.forEach(profile => { %>
        <div class="col">
          <!-- user clicks on profile to edit profile from this view thats why this is an a link -->
          <a class="text-decoration-none" href="/profiles/<%= profile._id %>">
            <div class="card shadow-sm">
              <% if (profile.avatar) { %>
                <img
                  class="card-img-top"
                  src="<%= profile.avatar %>"
                  alt="<%= profile.name %>'s avatar"
                  width="100%"
                  height="170"
                />
              <% } else {%>
                <img
                  class="card-img-top"
                  src="/images/icons/user.png"
                  alt="A placeholder avatar"
                  width="100%"
                  height="170"
                />
              <% } %>
              <div class="card-body">
                <p class="card-title fs-5 text-dark mb-0">
                  <%= profile.name %>
                </p>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
